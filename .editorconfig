root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 2
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

[*.svg]
insert_final_newline = false

[*.yml]
indent_style = space
indent_size = 2

[Dockerfile]
indent_style = space
indent_size = 4

[docker-compose.yml]
indent_style = space
indent_size = 4

[Makefile]
indent_style = tab
indent_size = 4
